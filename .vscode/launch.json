    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}/web",
            "pathMapping": {
                "/scripts": "${workspaceFolder}/web/scripts",
                "/lib": "${workspaceFolder}/web/lib",
                "/extensions/core": "${workspaceFolder}/web/extensions/core",
            }
        }
    ]
}